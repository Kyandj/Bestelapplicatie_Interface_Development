@page
@model KE03_INTDEV_SE_1_Base.Pages.AfrekenpaginaModel
@{
    ViewData["Title"] = "Afrekenen";
}

<h2 class="checkout-title">Afrekenen</h2>
<div class="checkout-container">

    <div class="checkout-sidebar">
        <a href="/Winkelmandje" class="btn-back">Terug</a>
        <div class="payment-methods">
            <button type="button" class="payment-btn">iDeal</button>
            <button type="button" class="payment-btn">Paypal</button>
            <button type="button" class="payment-btn">Apple Pay</button>
            <button type="button" class="payment-btn">Credit Card</button>
        </div>
    </div>

    <div class="checkout-main">

        <div class="checkout-card">
            <h3>Artikelen</h3>
            <div class="checkout-items">
                @foreach (var item in Model.CartItems)
                {
                    <div class="checkout-item">
                        <div class="checkout-item-info">
                            <div class="checkout-item-name">@item.Name</div>
                            <div class="checkout-item-price">€@item.Price.ToString("0.00")</div>
                        </div>
                        <div class="checkout-item-qty">Aantal: @item.Aantal</div>
                    </div>
                }
            </div>
        </div>

        <div class="checkout-details">
            <h3>Gegevens</h3>
            <form method="post" autocomplete="off">
                <div class="detail-row">
                    <label for="Naam" class="detail-label">Naam</label>
                    <input asp-for="Naam" id="Naam" class="checkout-input" required />
                </div>
                <div class="detail-row">
                    <label for="Adres" class="detail-label">Adres</label>
                    <input asp-for="Adres" id="Adres" class="checkout-input" required />
                </div>
                <button type="submit" class="checkout-finish-btn">Afronden</button>
            </form>
        </div>
    </div>
</div>

