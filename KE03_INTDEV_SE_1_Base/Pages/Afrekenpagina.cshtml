@page
@model KE03_INTDEV_SE_1_Base.Pages.AfrekenpaginaModel
@{
    ViewData["Title"] = "Afrekenen";
}

<form method="post">
    <div class="checkout-container">
        <div class="checkout-sidebar">
            <a asp-page="/Winkelmandje" class="back-button" style="margin-top: 60px; margin-bottom: 40px;">Terug</a>
            <h2 class="checkout-title">Betaalmethode</h2>
            <button class="pay-btn" type="button">iDeal</button>
            <button class="pay-btn" type="button">Paypal</button>
            <button class="pay-btn" type="button">Apple Pay</button>
            <button class="pay-btn" type="button">Credit Card</button>
        </div>
        <div class="checkout-main">
            <h1 class="checkout-header">Afrekenen</h1>
            <div class="checkout-content">
                <div class="checkout-articles">
                    <div class="checkout-box">
                        <div class="checkout-box-header"><b>Artikelen</b></div>
                        <div class="checkout-box-body">
                            @foreach (var item in Model.Cart)
                            {
                                <div class="checkout-article">
                                    <img src="~/Images/@($"{item.Name.Replace(" ", "")}.png")" alt="@item.Name" class="checkout-article-img" />
                                    <div>
                                        <div class="checkout-article-name">@item.Name</div>
                                        <div class="checkout-article-price">€ @item.Price</div>
                                        <div class="checkout-article-qty">Aantal: @item.Aantal</div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="checkout-box-footer">
                            <b>Totaal: € @Model.Cart.Sum(i => i.Price * i.Aantal)</b>
                        </div>
                    </div>
                </div>
                <div class="checkout-details">
                    <div class="checkout-box">
                        <div class="checkout-box-header"><b>Gegevens</b></div>
                        <div class="checkout-box-body">
                            <div class="form-group">
                                <label for="Naam"><b>Naam:</b></label>
                                <input asp-for="Naam" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="Adres"><b>Adres:</b></label>
                                <input asp-for="Adres" class="form-control" required />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="width:100%;text-align:center;margin-top:40px;">
                <button type="submit" class="checkout-btn" style="display:inline-block;">Afronden</button>
            </div>
        </div>
    </div>
</form>
