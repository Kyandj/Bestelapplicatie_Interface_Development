@page
@model KE03_INTDEV_SE_1_Base.Pages.WinkelmandjeModel
@{
    ViewData["Title"] = "Winkelmandje";
}

<h2 class="mb-4">Winkelmandje</h2>

@if (Model.Cart == null || !Model.Cart.Any())
{
    <div class="alert alert-info text-center">
        Je winkelmandje is leeg.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Prijs</th>
                    <th class="text-center">Aantal</th>
                    <th>Totaal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>€ @item.Product.Price.ToString("0.00")</td>
                        <td class="text-center">
                            <form method="post" asp-page-handler="UpdateAantal" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="action" value="decrease" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                            </form>

                            <span class="mx-2">@item.Aantal</span>

                            <form method="post" asp-page-handler="UpdateAantal" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="action" value="increase" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </td>
                        <td>€ @(item.Product.Price * item.Aantal).ToString("0.00")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Totaal:</td>
                    <td class="fw-bold">
                        € @Model.Cart.Sum(x => x.Product.Price * x.Aantal).ToString("0.00")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="text-end mt-3">
        <a href="/Afrekenen" class="btn btn-success">Ga naar afrekenen</a>
    </div>
}
