@page
@model KE03_INTDEV_SE_1_Base.Pages.Winkelmandje
@{
    ViewData["Title"] = "Winkelmandje";
}

<div class="container py-5 bg-light min-vh-100">
    <h2 class="text-center text-danger mb-4">Winkelmandje</h2>
     <a href="/index" class="btn btn-outline-dark rounded-pill">Terug</a>

    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <!-- Product 1 -->
            <div class="d-flex align-items-center justify-content-between border-bottom py-3">
                <img src="/images/tandwiel.png" alt="Tandwiel" class="img-thumbnail me-3" style="width: 60px; height: 60px;">
                <div class="flex-grow-1">
                    <div class="fw-bold">Tandwiel</div>
                    <div class="text-muted">€26,99</div>
                </div>
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-secondary btn-sm me-2">−</button>
                    <span>1</span>
                    <button class="btn btn-outline-secondary btn-sm ms-2">+</button>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="d-flex align-items-center justify-content-between border-bottom py-3">
                <img src="/images/schroef.png" alt="Schroef" class="img-thumbnail me-3" style="width: 60px; height: 60px;">
                <div class="flex-grow-1">
                    <div class="fw-bold">Schroef</div>
                    <div class="text-muted">€3,99</div>
                </div>
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-secondary btn-sm me-2">−</button>
                    <span>2</span>
                    <button class="btn btn-outline-secondary btn-sm ms-2">+</button>
                </div>
            </div>

            <!-- Totaal -->
            <div class="d-flex justify-content-between border-top pt-3 mt-3 fw-bold">
                <span>Totaal</span>
                <span>€34,97</span>
            </div>

            <!-- Afrekenen knop -->
            <div class="text-center mt-4">
                <button onclick="window.location.href='/Afrekenpagina'" class="btn btn-outline-dark rounded-pill px-4">Naar afrekenen</button>
            </div>
        </div>
    </div>
</div>