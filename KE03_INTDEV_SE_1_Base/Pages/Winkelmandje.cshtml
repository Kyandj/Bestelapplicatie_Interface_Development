@page
@model KE03_INTDEV_SE_1_Base.Pages.WinkelmandjeModel
@{
    ViewData["Title"] = "Winkelmandje";
}

<h2>Winkelmandje</h2>

@if (Model.Cart.Count == 0)
{
    <p>Je winkelmandje is leeg.</p>
}
else
{
    <table class="cart-box" style="margin: 0 auto;">
        <thead>
            <tr>
                <th>Product</th>
                <th>Prijs</th>
                <th>Aantal</th>
                <th>Totaal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart)
            {
                <tr class="cart-item">
                    <td>
                        <span class="item-name">@item.Name</span>
                    </td>
                    <td>
                        <span class="item-price">€ @item.Price</span>
                    </td>
                    <td class="item-quantity">
                        <form method="post" asp-page-handler="UpdateAantal" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" name="action" value="decrease">-</button>
                            <span>@item.Aantal</span>
                            <button type="submit" name="action" value="increase">+</button>
                        </form>
                    </td>
                    <td>
                        <span class="item-price">€ @(item.Price * item.Aantal)</span>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="cart-total">
                <td colspan="3" style="text-align:right;font-weight:bold;">Totaal:</td>
                <td style="font-weight:bold;">
                    € @Model.Cart.Sum(i => i.Price * i.Aantal)
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="checkout-btn" style="text-align:center; margin-top:20px;">
        <a asp-page="/Afrekenpagina">
            <button type="button">Afrekenen</button>
        </a>
    </div>
}
