@page
@model KE03_INTDEV_SE_1_Base.Pages.IndexModel
<!--  Homepage  -->
<div class="d-flex justify-content-end mb-4">
    <a href="/Orderhistorie" class="header-button me-2">Mijn bestellingen</a>
    <a href="/Winkelmandje" class="header-button">
        <img src="~/Images/Winkelmandje.png" alt="Winkelmandje" />
    </a>

</div>

<h1>Producten</h1>
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm">
            <img src="~/Images/@(product.Name).png" alt="@product.Name"\ />
            <div class="mt-2 fw-bold">@product.Name</div>

            <button class="product-info-btn mt-2 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#specs-@product.Id" aria-expanded="false" aria-controls="specs-@product.Id">
                Productspecificaties
            </button>
            <div class="collapse" id="specs-@product.Id">
                <div class="card card-body">
                    <strong>Beschrijving:</strong> @product.Description <br />
                    <strong>Prijs:</strong> € @product.Price
                </div>
            </div>

            <form method="post" asp-page-handler="AddToCart" class="mt-2">
                <input type="hidden" name="id" value="@product.Id" />
                <button type="submit" class="btn btn-success">Toevoegen aan winkelmandje</button>
            </form>
        </div>
    }
</div>
