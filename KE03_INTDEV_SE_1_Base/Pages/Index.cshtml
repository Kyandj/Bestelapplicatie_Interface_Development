@page
@model IndexModel
@{
    ViewData["Title"] = "Onze Producten";
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<div class="container my-5">
    <h2 class="text-center mb-4">Onze Producten</h2>

    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/Images/@(product.Name.Replace(" ", "")).png"
                         class="card-img-top" alt="@product.Name"
                         style="height: 200px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="card-text fw-bold">€ @product.Price.ToString("0.00")</p>

                        <form method="post" asp-page-handler="AddToCart" class="mt-auto">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-primary w-100">Toevoegen aan winkelmandje</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
